#!/usr/bin/env python
"""
epic-effective
Compute the effective genome size.

(Visit github.com/endrebak/epic for examples and help.)

Usage:
    epic-effective [--read-length=LEN] FILE
    epic-effective --help

Arguments:
    FILE             Fasta genome

Options:
    -h --help        show this help message
    -r --read-length length of reads  [default: 30]
    -n --nb-cpu      number of cores to use (more cores requires more mem!)
"""

from docopt import docopt

args = docopt(__doc__)

from epic.scripts.effective_genome_size import effective_genome_size

if __name__ == '__main__':
    fasta, read_length, nb_cpu = args["FILE"], args["--read-length"], args[
        "--nb-cpu"]
    egs1, egs2 = effective_genome_size(fasta, read_length, nb_cpu)
    print(fasta)
    print(egs1, egs2)
